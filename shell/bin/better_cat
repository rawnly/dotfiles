#!/usr/bin/env bash

if [ -z "$1" ]; then
	echo "Usage: better_cat <file>"
	exit 1
fi

filename=$(basename "$@")
extension="${filename##*.}"

if [ -z "$filename" ]; then
	echo "Invalid file name: $filename"
	exit 1
fi

if [[ $extension = "md" ]]; then
	glow "$@"
else
	bat --style=header,grid,snip,changes "$@"
fi
