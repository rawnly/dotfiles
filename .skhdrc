# Focus window up/down in stack
ctrl + alt - n : yabai -m window --focus stack.next || yabai -m window --focus stack.prev
ctrl + alt - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.next

# Add the active window  to the window or stack to the {direction}
# Note that this only works when the active window does *not* already belong to a stack
cmd + ctrl + shift + alt - h  : yabai -m window west --stack $(yabai -m query --windows --window | jq -r '.id')
cmd + ctrl + shift + alt - j  : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id')
cmd + ctrl + shift + alt - k  : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id')
cmd + ctrl + shift + alt - l  : yabai -m window east --stack $(yabai -m query --windows --window | jq -r '.id')

# Window Navigation
alt - j : yabai -m window --focus south || yabai -m -display --focus south
alt - k : yabai -m window --focus north || yabai -m -display --focus south
alt - h : yabai -m window --focus west || yabai -m -display --focus west
alt - l : yabai -m window --focus east || yabai -m -display --focus east
